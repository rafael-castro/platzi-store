{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(.+)/(.*).module.js": "$1/$2.module.ts",
    "^(.+)/(.*).service.js": "$1/$2.service.ts",
    "^(.+)/(.*).controller.js": "$1/$2.controller.ts"
  },
  "preset": "ts-jest/presets/default-esm"
}
